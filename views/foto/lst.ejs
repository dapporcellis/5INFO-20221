                                <h5 class="card-title">Fotos</h5>
                                <table class="mb-0 table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Titulo</th>
                                            <th>Data</th>
                                            <th>Usuarios</th>
                                            <th>Foto</th>
                                            <th>Edita</th>
                                            <th>Deleta</th>
                                        </tr>
                                    </thead>
                                    <% Fotos.forEach(function(foto){ %>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%=foto._id%>
                                            </td>
                                            <td>
                                                <%=foto.titulo%>
                                            </td>
                                            <td>
                                                <%=foto.data%>
                                            </td>
                                            <td>
                                                <%foto.usuarios.forEach(function(usuario){%>
                                                <%=usuario.nome%> - <%=usuario.email%>
                                                <%})%>
                                            </td>
                                            <td>
                                                <img style="max-width:20%;" src="/fotos/<%=foto.foto%>" alt="Foto">
                                            </td>
                                            <td>
                                                <a href="/postagem/edt/<%=foto._id%>">
                                                    <i style="font-size:15pt" class="metismenu-icon pe-7s-note"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/postagem/del/<%=foto._id%>">
                                                    <i style="font-size:15pt" class="metismenu-icon pe-7s-junk"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
